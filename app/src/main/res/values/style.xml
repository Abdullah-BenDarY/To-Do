<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="inputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/primary_blue</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>

    </style>

</resources>